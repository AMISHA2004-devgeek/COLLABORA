// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model - stores both Clerk auth data and application data
model User {
  id        String   @id
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notebooks              Notebook[]
  collaborations         NotebookCollaborator[]
  sentInvitations        CollaborationInvite[] @relation("InviteSender")
  receivedInvitations    CollaborationInvite[] @relation("InviteReceiver")
  proposedChanges        ProposedChange[]
  notifications          Notification[]

  @@map("users")
}

// Notebook model - foundation for the main feature
model Notebook {
  id           String   @id @default(cuid())
  title        String   @default("Untitled")
  description  String?
  content      String   @default("")
  originalText String?
  summaryText  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  chatMessages  ChatMessage[]
  collaborators NotebookCollaborator[]
  invitations   CollaborationInvite[]
  changes       ProposedChange[]

  @@index([userId])
  @@map("notebooks")
}

model ChatMessage {
  id          String   @id @default(cuid())
  content     String   @db.Text
  role        String   // "user" | "assistant" | "system"

  authorId    String?  // userId if human
  authorType  String   // "human" | "agent" | "system"
  authorName  String?  // display name (agent name or user name)

  createdAt   DateTime @default(now())

  notebookId  String
  notebook    Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)

  @@index([notebookId])
  @@map("chat_messages")
}

model NotebookCollaborator {
  id          String   @id @default(cuid())
  notebookId  String
  userId      String?     // null until invite accepted
  email       String?     // invited email
  role        String      @default("editor") // owner | editor | viewer
  status      String      @default("active") // active | pending | removed
  type        String      // human | agent
  agentType   String?
  agentName   String?
  canEdit     Boolean     @default(true)
  joinedAt    DateTime    @default(now())
  createdAt   DateTime    @default(now())

  notebook Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([notebookId])
  @@index([email])
  @@index([userId])
  @@map("notebook_collaborators")
}

// Collaboration invite model - manages invitation workflow
model CollaborationInvite {
  id          String   @id @default(cuid())
  status      String   @default("pending") // "pending" | "accepted" | "rejected"
  message     String?  @db.Text
  createdAt   DateTime @default(now())
  respondedAt DateTime?

  senderId   String
  sender     User     @relation("InviteSender", fields: [senderId], references: [id], onDelete: Cascade)
  
  receiverId String
  receiver   User     @relation("InviteReceiver", fields: [receiverId], references: [id], onDelete: Cascade)
  
  notebookId String
  notebook   Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)

  @@index([receiverId, status])
  @@index([senderId])
  @@index([notebookId])
  @@map("collaboration_invites")
}

// Proposed change model - tracks edit suggestions from collaborators
model ProposedChange {
  id              String   @id @default(cuid())
  lineNumber      Int
  originalText    String   @db.Text
  proposedText    String   @db.Text
  reason          String?  @db.Text
  status          String   @default("pending") // "pending" | "accepted" | "rejected"
  createdAt       DateTime @default(now())
  reviewedAt      DateTime?

  proposerId      String
  proposer        User     @relation(fields: [proposerId], references: [id], onDelete: Cascade)
  
  notebookId      String
  notebook        Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)

  @@index([notebookId, status])
  @@index([proposerId])
  @@map("proposed_changes")
}

// Notification model - user notifications for all collaboration events
model Notification {
  id        String   @id @default(cuid())
  type      String   // "invite" | "change_proposed" | "change_reviewed" | "mention"
  title     String
  message   String   @db.Text
  read      Boolean  @default(false)
  link      String?  // Link to the relevant page
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}
