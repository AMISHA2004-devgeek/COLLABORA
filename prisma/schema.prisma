// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model - stores both Clerk auth data and application data
model User {
  id        String   @id
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notebooks              Notebook[]
  collaborations         NotebookCollaborator[]
  sentInvitations        CollaborationInvite[] @relation("InviteSender")
  receivedInvitations    CollaborationInvite[] @relation("InviteReceiver")
  proposedChanges        ProposedChange[]
  notifications          Notification[]

  @@map("users")
}

// Notebook model - foundation for the main feature
model Notebook {
  id             String   @id @default(cuid())
  title          String   @default("Untitled")
  description    String?
  content        String   @default("")
  originalText   String?
  summaryText    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  userId         String
  organizationId String?
  
  user           User                    @relation(fields: [userId], references: [id])
  collaborators  NotebookCollaborator[]
  chatMessages   ChatMessage[]
  changes        ProposedChange[]
  invitations    CollaborationInvite[]

  @@index([userId])
  @@index([organizationId])
  @@map("notebooks")
}

// NotebookCollaborator - ONLY for AI agents now (humans use Clerk Organizations)
model NotebookCollaborator {
  id         String   @id @default(cuid())
  notebookId String
  userId     String?
  email      String?
  
  role       String   @default("editor")
  status     String   @default("active")
  type       String   @default("agent")
  
  agentType  String?
  agentName  String?
  
  canEdit    Boolean  @default(true)
  joinedAt   DateTime @default(now())
  createdAt  DateTime @default(now())

  notebook Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id])

  @@index([notebookId])
  @@index([userId])
  @@map("notebook_collaborators")
}

// CollaborationInvite - for external (non-org) human invites only
model CollaborationInvite {
  id            String   @id @default(cuid())
  notebookId    String
  senderId      String
  receiverId    String?
  receiverEmail String
  message       String?  @db.Text
  status        String   @default("pending")
  createdAt     DateTime @default(now())

  notebook Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  sender   User     @relation("InviteSender", fields: [senderId], references: [id])
  receiver User?    @relation("InviteReceiver", fields: [receiverId], references: [id])

  @@index([notebookId])
  @@index([receiverEmail])
  @@map("collaboration_invites")
}

// ChatMessage - stores all chat interactions
model ChatMessage {
  id         String   @id @default(cuid())
  content    String   @db.Text
  role       String

  authorId   String?
  authorType String
  authorName String?

  createdAt  DateTime @default(now())

  notebookId String
  notebook   Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)

  @@index([notebookId])
  @@map("chat_messages")
}

// ProposedChange - tracks edit suggestions from AI agents and collaborators
model ProposedChange {
  id           String   @id @default(cuid())
  lineNumber   Int
  originalText String   @db.Text
  proposedText String   @db.Text
  reason       String?  @db.Text
  status       String   @default("pending")
  createdAt    DateTime @default(now())
  reviewedAt   DateTime?

  proposerId   String
  proposer     User     @relation(fields: [proposerId], references: [id], onDelete: Cascade)
  
  notebookId   String
  notebook     Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)

  @@index([notebookId, status])
  @@index([proposerId])
  @@map("proposed_changes")
}

// Notification - user notifications for all collaboration events
model Notification {
  id        String   @id @default(cuid())
  type      String
  title     String
  message   String   @db.Text
  read      Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}