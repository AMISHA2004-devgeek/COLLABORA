// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model - stores both Clerk auth data and application data
model User {
  id        String   @id
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  notebooks Notebook[]

  // ✅ ADD THIS
  collaborations NotebookCollaborator[]

  @@map("users")
}


// Notebook model - foundation for the main feature
model Notebook {
  id           String   @id @default(cuid())
  title        String   @default("Untitled")
  description  String?
  content      String   @default("")
  originalText String?
  summaryText  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  chatMessages ChatMessage[]

  // ✅ ADD THIS
  collaborators NotebookCollaborator[]

  @@index([userId])
  @@map("notebooks")
}


model ChatMessage {
  id          String   @id @default(cuid())
  content     String   @db.Text
  role        String   // "user" | "assistant" | "system"

  authorId    String?  // userId if human
  authorType  String   // "human" | "agent" | "system"
  authorName  String?  // display name (agent name or user name)

  createdAt   DateTime @default(now())

  notebookId  String
  notebook    Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)

  @@index([notebookId])
  @@map("chat_messages")
}

model NotebookCollaborator {
  id          String   @id @default(cuid())
  notebookId  String
  userId      String?     // null until invite accepted
  email       String?     // invited email
  role        String      @default("editor") // owner | editor | viewer
  status      String      @default("active") // active | pending | removed
  type        String      // human | agent
  agentType   String?
  agentName   String?
  createdAt   DateTime    @default(now())

  notebook Notebook @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  user     User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([notebookId])
  @@index([email])
}

